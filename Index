    <title>Token Info Widget</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f7f7f7;
        }
        .widget {
            background-color: #ffffff;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            text-align: center;
            max-width: 300px;
            margin: 0 auto;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .widget h3 {
            margin-bottom: 20px;
        }
        .widget p {
            font-size: 18px;
            margin: 10px 0;
        }
        .loading {
            font-size: 16px;
            color: #999;
        }
    </style>
