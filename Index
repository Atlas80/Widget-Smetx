<body>

<div class="widget">
    <h3>Token Balance</h3>
    <p id="balance" class="loading">Loading...</p>
</div>

<script>
    const apiKey = 'X9PKAZUFPNAUH9PVU6T25M68N4Q6VTKKNS';
    const contractAddress = '0x0bCC26e40d87873615e082c1b5df15E487f94737'; // Token Contract Address
    const address = 'User_Wallet_Address'; // Replace with a real wallet address to check balance

    async function getTokenBalance() {
        const url = `https://api.etherscan.io/api?module=account&action=tokenbalance&contractaddress=${contractAddress}&address=${address}&tag=latest&apikey=${apiKey}`;

        try {
            const response = await fetch(url);
            const data = await response.json();
            const balance = parseInt(data.result) / (10 ** 18); // Assuming the token has 18 decimals
            document.getElementById('balance').innerText = `${balance.toFixed(2)} Tokens`;
        } catch (error) {
            document.getElementById('balance').innerText = 'Error fetching balance';
        }
    }

    getTokenBalance();
</script>

</body>
